a.one {
	color: hotpink;
}
/* unvisited link */
a.two:link {
	color: red;
}
/* visited link */
a.two:visited {
	color: green;
}
/* mouse over link */
a.two:hover {
	color: hotpink;
}
/* selected link */
a.two:active {
	color: blue;
}
a.three:link {
	text-decoration: none;
}
a.three:visited {
	text-decoration: none;
}
a.three:hover {
	text-decoration: underline;
}
a.three:active {
	text-decoration: underline;
}
a.four:link {
	background-color: yellow;
}
a.four:visited {
	background-color: cyan;
}
a.four:hover {
	background-color: lightgreen;
}
a.four:active {
	background-color: hotpink;
}
a.five:link, a.five:visited {
	background-color: #f44336;
	color: white;
	padding: 14px 25px;
	text-align: center;
	text-decoration: none;
	display: inline-block;
}
a.five:hover, a.five:active {
	background-color: red;
}
</style>
